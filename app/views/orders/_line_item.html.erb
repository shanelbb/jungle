
<!-- app/views/orders/_line_item.html.erb -->

<div class="row border-bottom mb-3 pb-2">
  <div class="col-md-2">
    <%= image_tag line_item.product.image.url, class: 'img-fluid' %>
  </div>
  <div class="col-md-6">
    <h5><%= line_item.product.name %></h5>
    <p><%= line_item.product.description %></p>
  </div>
  <div class="col-md-2">
    <p><strong>Quantity:</strong> <%= line_item.quantity %></p>
  </div>
  <div class="col-md-2 text-right">
    <p><strong>Total:</strong> <%= humanized_money_with_symbol line_item.total_price %></p>
  </div>
</div>
