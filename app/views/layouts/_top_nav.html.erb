<header class="<%= current_page?(root_path) ? 'hero' : 'hero small' %>">
  <section class="title">
  <h1>Welcome to Jungle</h1>
    <h2>Where you can find any plants!</h2>
  </section>
</header>
<nav class="navbar navbar-expand-lg navbar-dark sticky-nav">
  <div class="container">
    <a class="navbar-brand" href="<%= root_path %>">Jungle</a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
      aria-controls="navbarSupportedContent"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <% Category.all.each do |category| %>
          <li class="nav-item">
            <%= link_to category.name, category, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to 'About Us', about_path, class: 'nav-link' %>
        </li>
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle text-danger"
            href="#"
            id="navbarDropdownAdmin"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            Admin
          </a>
          <ul class="dropdown-menu dropdown-menu-dark">
            <li><%= link_to 'Dashboard', admin_dashboard_path, class: 'nav-link' %></li>
            <li><%= link_to 'Products', admin_products_path, class: 'nav-link' %></li>
          </ul>
        </li>
        <li class="nav-item end-0">
          <%= link_to cart_path, class: 'nav-link' do %>
            <%= fa_icon 'shopping-cart' %> My Cart (<%= cart.size %>)
          <% end %>
        </li>
        <li class="nav-item">
          <% if logged_in? %>
            <%= link_to 'Log Out', logout_path, method: :delete, class: 'nav-link' %>
          <% else %>
            <%= link_to 'Log In', login_path, class: 'nav-link' %> 
            <%= link_to 'Sign Up', signup_path, class: 'nav-link' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
(function(){
  const gnr = () => {
    const uptitle = document.querySelector("section.title h3");
    const subtitle = document.querySelector("section.title h2");

    uptitle.style.fontSize = "5em";
    uptitle.style.fontWeight = 900;
    uptitle.style.textAlign = "center";

    subtitle.innerHTML =
      "<p>Where you can find any plants!</p>";
  };

  const title = document.querySelector("header.hero");
  title.addEventListener("dblclick", gnr);
})();
</script>
